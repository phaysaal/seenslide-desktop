#!/bin/bash
# SeenSlide GUI Launcher Script

# Get script directory (where seenslide-gui is located)
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# Check if running from a virtual environment
if [ -n "$VIRTUAL_ENV" ]; then
    # Already in a virtual environment, just run
    python3 "$SCRIPT_DIR/gui/main.py" "$@"
elif [ -f "$SCRIPT_DIR/venv/bin/python" ]; then
    # Virtual environment exists, activate and run
    source "$SCRIPT_DIR/venv/bin/activate"
    python3 "$SCRIPT_DIR/gui/main.py" "$@"
else
    # No virtual environment, run with system Python
    python3 "$SCRIPT_DIR/gui/main.py" "$@"
fi
